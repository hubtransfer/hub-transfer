  {
    id: 'wt',
    nome: 'WT',
    cor: '#e74c3c'
  },
  {
    id: 'connecto', 
    nome: 'Connecto',
    cor: '#3498db'
  },
  {
    id: 'hub_transfer',
    nome: 'HUB Transfer',
    cor: '#2ecc71'
  }
];

/**
 * Op√ß√µes de forma de pagamento
 */
const FORMAS_PAGAMENTO_FRONTEND = [
  {
    id: 'monetario',
    nome: 'Monet√°rio',
    icone: 'üí∞'
