if (typeof console !== 'undefined') {
 console.log(`üöê ${SISTEMA_HUB_CONFIG.NOME} v${SISTEMA_HUB_CONFIG.VERSAO} carregado!`);
 console.log('üìã Execute INSTALAR_HUB_CENTRAL() para instalar o sistema completo');
